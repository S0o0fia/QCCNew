                                    <td>
                                        @*<input type="text" id="width1" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube1.width, new { @class = "form-control", @id = "width1" })
                                    </td>
                                    <td>
                                        @*<input type="text" id="width2" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube2.width, new { @class = "form-control", @id = "width2" })
                                    </td>
                                    <td>
                                        @*<input type="text" id="width3" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube3.width, new { @class = "form-control", @id = "width3" })
                                    </td>
                                </tr>
                                <tr>

                                        @Html.TextBoxFor(m => m.Cube2.Minfaceshell, new { @class = "form-control", @id = "shell2" })
                                    </td>
                                    <td>
                                        @*<input type="text" id="shell3" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube3.Minfaceshell, new { @class = "form-control", @id = "shell3" })
                                    </td>
                                </tr>
                                <tr>
                                    <th>Net Area (mm2) </th>

                                        @Html.TextBoxFor(m => m.Cube1.compgrossarea, new { @class = "form-control", @id = "gcStrength1", @readonly = "readonly" })

                                    </td>
                                    <td>
                                        @*<input type="text" id="gcStrength2" class="form-control-plaintext" readonly="readonly" />*@
                                        @Html.TextBoxFor(m => m.Cube2.compgrossarea, new { @class = "form-control", @id = "gcStrength2", @readonly = "readonly" })

                                    </td>
                                    <td>

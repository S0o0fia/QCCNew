                                    </td>
                                    <td>
                                        @*<input type="text" id="length2" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube2.length, new { @class = "form-control", @id = "length2" })
                                    </td>
                                    <td>
                                        @*<input type="text" id="length3" class="form-control-plaintext" placeholder="@Resources.Enter_Data" />*@
                                        @Html.TextBoxFor(m => m.Cube3.length, new { @class = "form-control", @id = "length3" })
                                    </td>
                                </tr>
                                <tr>

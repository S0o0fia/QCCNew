                            </tbody>

                        </table>
                        <button type="submit" class="btn btn-success" id="save">@Resources.Save</button>
                    </div>
                </div>
            </div>

        </div>
    }
</body>

<script type="text/javascript">
    $(document).ready(function () {
        var gArea1, gArea2, gArea3 

        //Gross Area Calculation
        $('#width1').change(function () {
            gArea1 = ($('#length1').val()) * ($('#width1').val()) 
            $("#gArea1").val(gArea1.toFixed(2)) 
        }) 
        $('#width2').change(function () {
            gArea2 = ($('#length2').val()) * ($('#width2').val()) 
            $("#gArea2").val(gArea2.toFixed(2)) 
        }) 
        $('#width3').change(function () {
            gArea3 = ($('#length3').val()) * ($('#width3').val()) 
            $("#gArea3").val(gArea3.toFixed(2)) 
        }) 

        //Comp Strength (net Area) Calculation
        var ncStrength1, ncStrength2, ncStrength3 
        $('#load1').change(function () {
            ncStrength1 = ($('#load1').val()*1000)/($("#nArea1").val()) 
            $('#ncStrength1').val(ncStrength1.toFixed(2)) 
        }) 
        $('#load2').change(function () {
            ncStrength2 = ($('#load2').val() * 1000) / ($("#nArea2").val()) 
            $('#ncStrength2').val(ncStrength2.toFixed(2)) 
        }) 
        $('#load3').change(function () {
            ncStrength3 = ($('#load3').val() * 1000) / ($("#nArea3").val()) 
            $('#ncStrength3').val(ncStrength3.toFixed(2)) 
        }) 

        //Comp Strength (gross Area) Calculation
        var gcStrength1, gcStrength2, gcStrength3 
        $('#load1').change(function () {
            gcStrength1 = ($('#load1').val() * 1000) / ($("#gArea1").val()) 
            $('#gcStrength1').val(gcStrength1.toFixed(2)) 
        }) 
        $('#load2').change(function () {
            gcStrength2 = ($('#load2').val() * 1000) / ($("#gArea2").val()) 
            $('#gcStrength2').val(gcStrength2.toFixed(2)) 
        }) 
        $('#load3').change(function () {
            gcStrength3 = ($('#load3').val() * 1000) / ($("#gArea3").val()) 
            $('#gcStrength3').val(gcStrength3.toFixed(2)) 

            //Min Ave Compressive Strength of (3) Units (Net Area) Calculation
            var macStrengthNet = (ncStrength1 + ncStrength2 + ncStrength3) / 3 
            $('#macStrengthNet1').val(macStrengthNet.toFixed(2)) 
            $('#macStrengthNet2').val(macStrengthNet.toFixed(2)) 

            //Min Ave Compressive Strength of (3) Units (Net Area) Calculation
            var macStrength = (gcStrength1 + gcStrength2 + gcStrength3) / 3 
            $('#macStrength1').val(macStrength.toFixed(2)) 
            $('#macStrength2').val(macStrength.toFixed(2)) 
            $('#macStrength3').val(macStrength.toFixed(2)) 
        }) 

    }) 


     
    var message = "@TempData["AlertMessage2"]";

    
    if (message != null && message != "") {
        $("#alertAdded").show("fast");
        $('#save').hide();
    }
    else {
       $("#alertAdded").hide();
    }
</script>


@model AspnetMvcDemo.Models.InfractionDetail

@{
    ViewBag.Title = "ConcreteFactoryReports";
}

@section Styles {
    @Styles.Render("~/bundle/vendor/css/smartwizard/smartwizard")
}
@section Scripts {
    <!-- Dependencies -->
    @Scripts.Render("~/bundle/vendor/js/smartwizard/smartwizard")
    @Scripts.Render("~/bundle/vendor/js/validate/validate")

    @Scripts.Render("~/bundle/js/forms_wizard")

    <script src="https://maps.google.com/maps/api/js?key=AIzaSyCdFgjBkq4uZTK7P5-mvWukUrkQVub8jw0"></script>
    @Scripts.Render("~/bundle/vendor/js/gmaps/gmaps")

    @*@Scripts.Render("~/bundle/js/charts_gmaps")*@
}

    

<style type="text/css">
    .col-md-2 {
        flex: 0 0 16.66667%;
        max-width: 16.66667%;
        text-align: left;
        vertical-align: text-bottom;
    }
    @*for Mobile Design*@ @@media only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 1024px) {


        tr {
            display: grid;
            border-bottom: 1px solid #ccc;
        }
        /* Force table to not be like tables anymore */
        table, tbody, thead, td, tr, th {
            display: block;
        }

        table {
            width: 100%;
        }
        /* Hide table headers (but not display: none;, for accessibility) */
        thead tr {
            position: absolute;
            top: -9999px;
            left: -9999px;
        }


        td {
            /* Behave  like a "row" */
            border: none;
            border-bottom: 1px solid #eee;
            position: relative;
            padding-left: 50%;
        }

            td:before {
                width: 45%;
                padding-left: 10px;
                white-space: nowrap;
                float: right;
                text-align: center;
                font-weight: bold;
            }
            /*
	Label the data
	*/
            td:nth-of-type(1):before {
                content: "اسم المصنع";
            }

            td:nth-of-type(2):before {
                content: "اسم مالك المصنع";
            }

            td:nth-of-type(3):before {
                content: "رتبة العينة";
            }
            td:nth-of-type(4):before {
                content: "التفاصييل";
            }
    }

        .Mix, button {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius : 10px;
        }

        .nav-link {
            margin-bottom: 1%;
            font-weight: bold;
             border-radius : 25px;
        }

        * {
            font-size: large;
        }


    .table {
        border-bottom: solid 2px #eeeeee;
    }

    .page-header {
        margin-top: 2%;
        margin-bottom: 3%;
    }

    h3 {
        text-decoration: underline;
        text-align: right;
    }

   

</style>



<body style="background-color :#ECECF1; background-size: cover;" dir="rtl">
    <h3 style="text-align:center">@Resources.Resources.Prepare_Concrete</h3>
    <hr class="container-m-nx border-light my-4">
    @*<h6 class="text-muted small font-weight-bold py-3 my-4">
            With icon
        </h6>*@
    @using (Html.BeginForm("AddConcreteSample", "ConcreteFactoryReports", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <form>
            <div id="smartwizard-2" class="smartwizard-example">
                <ul>
                    <li>
                        <a href="#smartwizard-2-step-1" class="mb-3">
                            <span class="sw-done-icon ion ion-md-checkmark"></span>
                            <span class="sw-icon ion ion-md-copy"></span>
                            @Resources.Resources.Step1
                            <div class="text-muted small">@Resources.Resources.Step1</div>
                        </a>
                    </li>
                    <li>
                        <a href="#smartwizard-2-step-2" class="mb-3">
                            <span class="sw-done-icon ion ion-md-checkmark"></span>
                            <span class="sw-icon ion ion-md-copy"></span>
                            @Resources.Resources.Step2
                            <div class="text-muted small">@Resources.Resources.Step2</div>
                        </a>
                    </li>
                    <li>
                        <a href="#smartwizard-2-step-3" class="mb-3">
                            <span class="sw-done-icon ion ion-md-checkmark"></span>
                            <span class="sw-icon ion ion-md-copy"></span>
                            @Resources.Resources.Step3
                            <div class="text-muted small">@Resources.Resources.Step3</div>
                        </a>
                    </li>
                    <li>
                        <a href="#smartwizard-2-step-4" class="mb-3">
                            <span class="sw-done-icon ion ion-md-checkmark"></span>
                            <span class="sw-icon ion ion-md-copy"></span>
                            @Resources.Resources.Step4
                            <div class="text-muted small">@Resources.Resources.Step4</div>
                        </a>
                    </li>
                </ul>
                <div class="mb-3">
                    <div id="smartwizard-2-step-1" class="card animated fadeIn" dir="rtl">
                        <div class="card-body">
                            <div class="row" style="text-align:right">
                                <div class="col-md-12 form-group">
                                    <label style="font-weight:bold"> @Resources.Resources.Name_of_the_violation :</label>
                                </div>
                                <table class="table" style="width:100%">
                                    <tbody>

                                        <tr>
                                            <td>
                                                <label>
                                                    @if (Model.infraction.AbsenceofDevice == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>
                                                    }
                                                    @Resources.Resources.The_absence_of_the_device_for_the_laboratory_technician
                                                </label>
                                            </td>


                                            <td>
                                                <label>
                                                    @if (Model.infraction.C8Day == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>
                                                    }
                                                  انخفاض مقاومة الضغط
                                                </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>

                                                <label>
                                                    @if (Model.infraction.HardwareNotCalibrated == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>
                                                    }

                                                    @Resources.Resources.Hardware_not_calibrated
                                                </label>
                                            </td>

                                            <td>
                                                <label>
                                                    @if (Model.infraction.InsufficientRecords == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>

                                                    }
                                                    @Resources.Resources.Insufficient_quality_and_documentation_records
                                                </label>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>

                                                <label>
                                                    @if (Model.infraction.IsCleanLocation == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>
                                                    }
                                                    @Resources.Resources.Lack_of_attention_to_site_cleanliness_and_environmental_protection

                                                </label>
                                            </td>

                                            <td>

                                                <label>
                                                    @if (Model.infraction.NotUsingMixtureofClass == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>

                                                    }
                                                    @Resources.Resources.Not_using_a_mixture_of_class
                                                </label>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>

                                                <label>
                                                    @if (Model.infraction.Temperature == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>

                                                    }

                                                    @Resources.Resources.High_temperature_concrete
                                                </label>
                                            </td>


                                            <td>
                                                <label>
                                                    @if (Model.infraction.Landing == true)
                                                    {
                                                        <i class="ion-ios-checkmark-circle" style="color:red"></i>
                                                    }

                                                    @Resources.Resources.Reduced_amount_of_decline
                                                </label>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                                <label>
                                    <span style="font-weight:bold">@Resources.Resources.Infraction_Count :</span>
                                    @Model.InfractionCount
                                </label>
                            </div>

                        </div>
                    </div>

                    <!--Step Two-->
                    <div id="smartwizard-2-step-2" class="card animated fadeIn">

                        <table class="table">
                            <thead style="width:100%">
                                <tr style="text-align:center">
                                    <th style="width:25%">@Resources.Resources.Factory_Name</th>
                                    <th style="width:25%">@Resources.Resources.Factroy_Location</th>
                                    <th style="width:25%">@Resources.Resources.Report_Date</th>
                                    <th style="width:25%">@Resources.Resources.Visits</th>
                                </tr>
                            </thead>
                            <tbody style="width:100%">
                                <tr style="text-align:center">
                                    <td style="width:25%">@Model.FactoryName</td>
                                    <td style="width:25%">@Model.Location</td>
                                    <td style="width:25%">@Model.infraction.VisitDate</td>
                                    <td style="width:25%">@Model.VisitsCount</td>
                                </tr>
                            </tbody>
                        </table>


                    </div>
                    <div id="smartwizard-2-step-3" class="card animated fadeIn">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr style="text-align:center">
                                        <th>#</th>
                                        <th>@Resources.Resources.the_temperature_meets_the_requirements</th>
                                        <th>@Resources.Resources.Measuring_the_drop_within_the_required_limits</th>
                                        <th>@Resources.Resources.The_pressure_resistance_meets_the_requirements</th>
                                        <th>@Resources.Resources.Use_compatible_with_the_approved_mixture</th>
                                        <th>@Resources.Resources.Good_site_cleanliness</th>
                                        <th>@Resources.Resources.Control_of_volatile_dust_in_the_mixing_plant_is_effective</th>
                                        <th>@Resources.Resources.Spray_debris_in_the_summer</th>
                                        <th>@Resources.Resources.Laboratory_engineer_is_available</th>
                                        <th>@Resources.Resources.The_presence_of_plasticizers_in_the_concrete_transport_vehicle</th>
                                        <th>@Resources.Resources.Factory_workers_commitment_to_wear_masks</th>
                                    </tr>
                                </thead>

                                <tbody style="text-align:center">
                                    @{int i = 1;}
                                    @foreach (var item in Model.infractions)
                                    {
                                        <tr>
                                            <td> @Resources.Resources.Visit  @(i++)</td>
                                            @if (item.ConcreteTemperture < 34)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.DownAmount > 100)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.DownAmount > 100)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.DownAmount > 100)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsCleanLocation == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsDustControlInStation == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsRokamSummer == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsLabEngineer == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsMoldanatInTrucks == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                            @if (item.IsPeopleSafty == true)
                                            {
                                                <td>
                                                    <label>Yes</label>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label>No</label>
                                                </td>
                                            }
                                        </tr>

                                    }


                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div id="smartwizard-2-step-4" class="card animated fadeIn">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr style="text-align:center">
                                        <th>@Resources.Resources.Sample_Number</th>
                                        <th>@Resources.Resources.Test_result_report</th>
                                        <th>@Resources.Resources.Break_7_Days</th>
                                        <th>@Resources.Resources.Break_Concrete_28_days</th>
                                    </tr>
                                </thead>
                                <tbody style="text-align:center">
                                    <tr>
                                        <td> @Model.infraction.SampleNo</td>
                                        <td>
                                            <i class="ion ion-ios-arrow-dropleft-circle d-block" data-toggle="modal" onclick="Modalpop(@Model.infraction.SampleNo);" style="cursor:pointer"></i>
                                        </td>

                                        <td>
                                            <i class="ion ion-ios-arrow-dropleft-circle d-block" data-toggle="modal" onclick="Modalpop3(@Model.infraction.SampleNo);" style="cursor:pointer"></i>
                                        </td>

                                        <td>
                                            <i class="ion ion-ios-arrow-dropleft-circle d-block" data-toggle="modal" onclick="Modalpop(@Model.infraction.SampleNo);" style="cursor:pointer"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class=" form-group">
                                @if (Model.User.JobTitle == "Admin")
                                {
                                    if (Model.infraction.AdminApproved != true)
                                    {
                                        <button type="button" class="btn btn-success" onclick="Modalpop2(@Model.infraction.ID,0)">@Resources.Resources.Reviewed</button>
                                    }
                             
                                    if (Model.infraction.MonitorApproved != true)
                                    {
                                        <button type="button" class="btn btn-success" onclick="Modalpop2(@Model.infraction.ID,1)">@Resources.Resources.ApprovedBySuperVisor</button>
                                    }
                                    else if (Model.infraction.Monitor2Approved != true)
                                    {
                                        <button type="button" class="btn btn-success" onclick="Modalpop2(@Model.infraction.ID,2)">@Resources.Resources.ApprovedByDirector</button>
                                    }
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    <hr class="container-m-nx border-light mt-0 mb-5">

    <div class="modal fade" id="Modal_sucess" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title text-primary text-center" id="myModalLabel">@Resources.Resources.Reports</h3>
                </div>
                <div id="ModalBody" class="modal-body">
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="Modal_sucess2" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="width:100%">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title text-primary text-center" id="myModalLabel">@Resources.Resources.Break_7_Days</h3>
                </div>
                <div id="ModalBody2" class="modal-body">
                </div>
            </div>
        </div>
    </div>
</body>

<script>
     function Modalpop(id) {
        var urlPost = '@Url.Action("ConcreteFactoryReports", "infraction")'+"/"+id;
        $.get(urlPost, function (data) {

            $('#ModalBody').html(data.toString());

            $('#Modal_sucess').modal('show');

        });
    }


    function Modalpop3(id) {
        var urlPost = '@Url.Action("TestResultSeven", "infraction")'+"/"+id;
        $.get(urlPost, function (data) {

            $('#ModalBody2').html(data.toString());

            $('#Modal_sucess2').modal('show');

        });
    }
    
    function Modalpop2(id, num) {
        if (num == 0) {
              var urlPost = '@Url.Action("ApproveAdmin", "Infraction")' + "/" + id;
      
        }
        if (num == 1) {
              var urlPost = '@Url.Action("ApproveMonitor1", "Infraction")' + "/" + id;
      
        }
        if (num == 2) {
              var urlPost = '@Url.Action("ApproveMonitor2", "Infraction")' + "/" + id;
      
        }
        $.get(urlPost, function (data) {

            $('#ModalBody').html(data.toString());

            $('#Modal_sucess').modal('show');

        });
    }

         
</script>
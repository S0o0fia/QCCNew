</body>
<script>

    function Modalpop(id) {
        var urlPost = '@Url.Action("testDetails", "BlockInfraction")' + "/" + id;
        location.href = urlPost
    }

    $(document).ready(function () {
        $("#alertApproved").hide();
        $("#alertDeclined").hide();
        var message ="@TempData["AlertMessage"]";

        if (message != null && message != "") {
            if (message == "Waiting") {
                $("#alertApproved").show("fast");
                $("#alertDeclined").hide();
            }
            else {
                $("#alertApproved").hide();
                $("#alertDeclined").show("fast");
            }
        }
    })

</script>



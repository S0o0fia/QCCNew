@model AspnetMvcDemo.Models.CircularsPath

@using Resources

<body style="background-color :#ECECF1; background-size: cover;" dir="rtl">
    

    @using (Html.BeginForm("attachCircular", "Circular", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <form>
            @Html.HiddenFor(x => x.factoryId)

            <div class="page-header  align-items-center">
                <div class="row">
                    <div class="col-md-9">
                        <h2 style="text-align : right ; text-decoration:underline ">@Resources.CreateCircular</h2>
                    </div>

                </div>

            </div>
            <div class="nav-tabs-top nav-responsive-xl" style="-ms-flex-direction: column; flex-direction: column; margin-top: 4%; padding-left: 100px; padding-right: 100px;">
                <div class="tab-content">
                    <div class="tab-pane fade show active">
                        <div class="card-body">
                            <table class="table table-reponsive">
                                <thead style="text-align:center">
                                    <tr>
                                        <th>
                                            @Resources.Factories_List
                                        </th>
                                    </tr>
                                </thead>
                                <tbody style="text-align:center">
                                    <tr>
                                        <td>
                                           @Html.DropDownListFor(x=>x.factId , Model.facts , new { @class = "form-control" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.circularFileName, new { @type = "file", @multiple = "multiple" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-group col-12" style="text-align:center" >
                                <button type="submit" class="btn btn-success" >@Resources.Save</button>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </form>
    }
</body>


